<lifecycles>
  <lifecycle>
    <id>crowbar</id>
    <phases>
      <phase>
        <id>initialize</id>
        <executions>
          <execution>
            <goals>
              <goal>init</goal>
            </goals>
          </execution>
        </executions>
      </phase>
      <phase>
        <id>test</id>
        <configuration>
